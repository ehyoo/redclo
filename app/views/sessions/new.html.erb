<h1 id="log_in">Log In</h1>

<%= form_tag(@user) do %>

  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag 'user[username]'%>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag 'user[password]'%>
  </div>

  <div class="action">
    <%= submit_tag "Log in"%>
  </div>
<% end %>
